  <div class="row">
    <h3>登録情報編集</h3>
  </div>

<%= form_for(@member, url: member_path) do |f| %>
    <div class="row">
      <div class="col-xs-3"><%= f.attachment_field :profile_image, class: "user_image" %></div>
  	</div><br>
  	<div class="row">
      <div class="col-xs-3">氏名<br><%= f.text_field :name %></div>
    </div><br>
    <div class="row">
      <div class="col-xs-3">メールアドレス<br><%= f.text_field :email %></div>
    </div><br>
    <div class="row">
      <div class="col-xs-3">自己紹介<br><%= f.text_area :introduction, class: "introduction" %></div>
    </div><br>
    <div class="row">
      <div class="col-xs-3"><%= f.submit '編集内容を保存する',class: "btn btn-primary"%><%= link_to "退会する",member_registration_path,method: :delete, "data-confirm" => "本当に退会しますか?", class: "btn btn-danger" %></div>
    </div>
<% end %>
