<% if member_signed_in? %>
    <% if current_member != work.member %>
        <% if work.member.followed_by?(current_member) %>
            <p><%=link_to "フォロー済み", member_relationships_path(work.member.id), method: :delete,remote: true,class: "btn btn-primary" %></p>
        <% else %>
            <p><%=link_to "フォローする", member_relationships_path(work.member.id), method: :post,remote: true,class: "btn btn-outline-primary" %></p>
        <% end %>
    <% end %>
<% end %>