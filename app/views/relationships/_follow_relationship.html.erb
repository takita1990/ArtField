<% if member_signed_in? %>
    <% if current_member != member %>
        <% if member.followed_by?(current_member) %>
            <p><%=link_to "フォロー済み", member_relationships_path(member), method: :delete,remote: true,class: "btn btn-primary" %></p>
        <% else %>
            <p><%=link_to "フォローする", member_relationships_path(member), method: :post,remote: true,class: "btn-outline-primary" %></p>
        <% end %>
    <% end %>
<% end %>