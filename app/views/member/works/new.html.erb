<div class="row">
		<h1>商品新規登録</h1>
	</div>
	<div class="row">
		<%= form_for(@work, url: member_works_path) do |f| %>
				<!-- エラーメッセージ表示-->
					<% if @work.errors.any? %>
						<div id="error_explanation">
							<h3><%= @work.errors.count %>error prohibited this obj from being saved:</h3>
								<% @work.errors.full_messages.each do |message| %>
									<%= message %>
								<% end %>
						</div>
					<% end %>
				<!-- エラーメッセージ表示-->

			<table class="table">
				<%= f.label :image %>
				<%= f.file_field :image, multiple: true %>

				<tr>
				    <th>商品名</th>
					<td><%= f.text_field :name%></td>
				</tr>
				<tr>
					<th>商品説明</th>
					<td><%= f.text_area :introduction %></td>
				</tr>
				<tr>
					<th>ジャンル</th>
					<td><%= f.collection_select :genre_id, Genre.all, :id, :name%></td>
				</tr>
			</table>
			<div class="row justify-content-end">
				<%= f.submit '新規登録', class: "btn btn-primary col-xs-3"  %>
			</div>
		<% end %>
	</div>